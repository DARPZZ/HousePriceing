<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HousePriceing.Views.OversvømmelsePage"
             Title="OversvømmelsePage">
    <ScrollView>
        <StackLayout>
            <Label Text="Risiko for oversvømmelse"
                   HorizontalTextAlignment="Center"
                    FontSize="Title"
                    FontAttributes="Bold"
                    Padding="5"
                  
                   />

            <StackLayout Margin="25">
                <Label Text="Grundvand"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   FontSize="Medium"       
                />
                <Image
                      Source="{Binding GrundVandOversvømmelsePicture}"
                      HeightRequest="50"
                      WidthRequest="50"
                      Margin="0,10,0,0"
                />
                <Label Text="{Binding GrundVandOversvømmelsetext}"/>
            </StackLayout>

            <StackLayout Padding="24" Margin="0,0,0,50">
                <Label
                    Text="Oversvømmelsesdirektivet"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    FontSize="Medium"
                />
                <Image
                    Source="{Binding OversvømmelsePicture}"
                    HeightRequest="50"
                    WidthRequest="50"
                    Margin="0,10,0,0"
                />
                <Label Text="{Binding OversvømmelseText}"/>
            </StackLayout>

          
        </StackLayout>
    </ScrollView>
</ContentPage>
